{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "lib": [
            "DOM",
            "ES2018"
        ],
        "module": "es2015",
        "moduleResolution": "node",
        "outDir": "./dist/",
        "resolveJsonModule": true,
        "sourceMap": true,
        "target": "es2015",
        "types": ["vitest/globals"]
    },
    "include": [
        "src/**/*"
    ]
}
