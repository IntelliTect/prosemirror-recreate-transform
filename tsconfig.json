{
    "compilerOptions": {
        "declaration": true,
        "outDir": "./dist/",
        "module": "es2015",
        "target": "es2015",
        "allowJs": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "downlevelIteration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "lib": [
            "DOM",
            "ES2018"
        ]
    },
    "include": [
        "src/**/*",
        "node_modules/@technik-sde/**/*"
    ],
    "exclude": [
        "node_modules/@technik-sde/*/test"
    ]
}
